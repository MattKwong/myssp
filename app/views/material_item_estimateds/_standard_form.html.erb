<% remote ||= false %>
<%= semantic_form_for material_item_estimated, :url => (material_item_estimated.new_record? ?
        project_material_item_estimateds_path(material_item_estimated.project)
                : material_item_estimated ) do |form| %>
  <%= form.inputs do %>
    <%= form.input :item, :collection => Item.all,
                   :input_html => { :class => "jq-combo" }%>
    <%= form.input :quantity, :hint => "Enter the estimate for the quantity to be used." %>
    <%= form.input :uom, :hint => "Enter the unit of measure (lbs, gals, etc.)" %>
  <% end %>
  <%= form.buttons %>
<% end %>
