<% remote ||= false %>
<%= semantic_form_for @material_item_estimated, :url => (@material_item_estimated.new_record? ?
        add_material_item_estimated_path(@material_item_estimated) : edit_material_item_estimated_path(@material_item_estimated.id )) do |form| %>

  <%= form.inputs do %>
    <%= form.input :item, :include_blank => false, :collection => @standard_item_list,
                   :input_html => { :class => "jq-combo" }%>
    <%= form.input :quantity, :hint => "Enter the estimate for the quantity to be used.", :input_html => { :size => 4 } %>
        <input type = "hidden" name="material_item_estimated[project_id]" value= <%= @material_item_estimated.project_id %> />
  <% end %>
  <%= form.buttons %>
<% end %>
