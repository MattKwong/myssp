<% @program.budget_items.each do |id| %>
<tr>
  <td><%= @program.budget_item_name(id) %></td>
  <td><%= '%.2f' % @program.budget_item_budgeted(id) %></td>
  <td><%= '%.2f' % @program.budget_item_spent(id) %></td>
  <td><%= '%.2f' % @program.budget_item_spent_with_tax(id) %></td>
  <td><%= '%.2f' % @program.budget_item_remaining(id) %></td>
</tr>
<% end %>
<tfoot>
<tr>
  <td>Totals</td>
  <td><%= '%.2f' % @program.budget_item_budgeted_total %></td>
  <td><%= '%.2f' % @program.budget_item_spent_total %></td>
  <td><%= '%.2f' % @program.budget_item_spent_with_tax_total %></td>
  <td><%= '%.2f' % @program.budget_item_remaining_total %></td>
</tr>

</tfoot>