                  <li><%= link_to "Churches", admin_churches_path %></li>
                  <li><%= link_to "Liaisons", admin_liaisons_path %></li>
                  <li><%= link_to "Admin Center", admin_path %></li>
               </ul>
            <% if signed_in? && current_admin_user.food_admin? %>
              <li><%= link_to "Food/Tabatha", food_path %></li>
            <% end %>
            <% if signed_in? && current_admin_user.construction_admin? %>
              <li><%= link_to "Construction", construction_path %></li>
            <% end %>
        <% end %>
        <% if signed_in? && current_admin_user.liaison? %>
            <li><%= link_to "MySSP", myssp_path(current_admin_user.liaison_id) %></li>
        <li><%= link_to "Help", help_path %></li>
        <% end %>
    </ul>
        <% if signed_in? %>
            <div><p id="utility_nav"><span class="current_user"><%= current_admin_user.name %></span>
              <a href="/admin/logout" data-method="get">Logout</a></p></div>
        <% else %>
            <li><%= link_to "Sign in", new_admin_user_session_path %></li>
        <% end %>

</div>

