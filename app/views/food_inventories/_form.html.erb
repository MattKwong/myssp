<div id="active_admin_content">
<%= semantic_form_for food_inventory, :url => (food_inventory.new_record? ? program_food_inventories_path(@program) : food_inventory_path(@food_inventory)) do |form| %>
  <%= form.inputs do %>
    <%= form.input :date, :label => "Date of Food Inventory",
    :hint => "A weekly food inventory MUST be done AFTER serving your final meal of the week and BEFORE doing any shopping." %>
  <% end %><br/>
  <%= form.buttons %>
<% end %>
</div>
