<div id="title_bar">
        <div id="titlebar_left">
          <span class="breadcrumb">
            <a href="/admin">Admin</a>
            <span class="breadcrumb_sep">/</span>
          </span>
          <h2 id="page_title">Schedule a Group</h2>
        </div>
</div>
<%= form_for(@registration) do |r| %>
     <div id="active_admin_content"  class="with_sidebar">
        <div id="main_content_wrapper">
          <div id="main_content">
              <div class="panel">
              <div class="panel_contents">
                <div class="attributes_table liaison" id="attributes_table_liaison_3">
                  <table border="0" cellspacing="0" cellpadding="0" >
                    <h3>Group Details </h3>
                    <tr>
                      <th>Group name</th>
                      <td><%= @registration.name %></td>
                    </tr>
                    <tr>
                      <th>Church name</th>
                      <td><%= @church.name %></td>
                    </tr>
                    <tr>
                      <th>Liaison name</th>
                      <td><%= @liaison.name %></td>
                    </tr>
                    <tr>
                      <th>Youth</th>
                      <td><%= @registration.requested_youth %></td>
                    </tr>
                    <tr>
                      <th>Counselors</th>
                      <td><%= @registration.requested_counselors %></td>
                    </tr>
                    <tr>
                      <th>Total</th>
                      <td><%= @registration.requested_total %></td>
                    </tr>
                  </table>

                </div>
                </div>
              </div>
              </div>


              <div class="panel">
                 <div class="panel_contents">
                   <div class="attributes_table choices" id="attributes_table_choices">
                      <table border="0" cellspacing="0" cellpadding="0" id="requests" class="index_table">
                        <h3>Choices: Select one of the following... </h3>
                        <thead>
                                        <tr>
                                            <th>Choice</th>
                                            <th>Session</th>
                                            <th>Site</th>
                                            <th>Week</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Session Enrollment</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                         <tbody>
                            <% i = 0 %>
                            <% @requests.each do |choice| %>
                                        <tr>
                                            <% i = i + 1 %>
                                            <td><%= i %></td>
                                            <td><%= Session.find(choice).name %></td>
                                            <td><%= Site.find(Session.find(choice).site_id).name %></td>
                                            <td><%= Period.find(Session.find(choice).period_id).name %></td>
                                            <td><%= Period.find(Session.find(choice).period_id).start_date.to_formatted_s(:long) %></td>
                                            <td><%= Period.find(Session.find(choice).period_id).end_date.to_formatted_s(:long) %></td>
                                            <td><%= ScheduledGroup.sum(:current_total, :conditions => ['session_id = ?', choice]) %></td>
                                            <td><%= link_to "Schedule this choice",
                                                            scheduled_groups_schedule_path(:priority => i, :id => choice, :reg => @registration.id) %></td>
                                        </tr>
                                    <% end %>
                          </tbody>
                      </table>
                   #TODO: This isn't working. The url resulting from the link_to statement doesn't include the literal value of the
                     #choice that has been selected.
                      <h3>Or pick from the list below: </h3><br>
                      <div class="field">
                        <%= r.label "Session" %>
                        <%= collection_select("Registration", "Session", Session.all, :site_id, :name, {:prompt => false}) %>
                        <%= link_to "Schedule this session", scheduled_groups_schedule_path(:priority => 0,:id => 'value', :reg => @registration.id) %>
                      </div>
                   </div>
                </div>
              </div>
          </div>
     </div>
    <% end %>
  </div>