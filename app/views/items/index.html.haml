#active_admin_content
  - if @items
    .paginator.append-bottom
      %span.wrapper
        = paginate @items
  .table_as_index
    %table.index_table
      %thead
        %tr
          %th Item Name
          %th Program
          %th Category
          %th Base Unit
          %th Taxed?
          %th Actions
          %th
      %tbody
        - @items.each do |item|
          %tr
            %td= item
            %td= item.program unless item.program.nil?
            %td= item.item_category
            %td= item.base_unit
            %td= item.default_taxed ? "Yes" : "No"
            %td= link_to "View", item
            -if can? :edit, Item
              %td= link_to "Edit", edit_item_path(item, :sender => 'index')
- if @items
  .paginator.prepend-top
    %span.wrapper
      = paginate @items
