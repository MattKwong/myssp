<%= render 'layouts/myssp_header' %>
<div id="active_admin_content">
  <div id="main_content_wrapper">
     <div id="main_content">
        <%= render 'layouts/myssp_group_data' %>
        <%= form_for(@screen_info[:payment]) do |r| %>
           <%= render 'shared/error_messages_payment' %>
           <div class="panel">
              <div class="panel_contents">
                 <div class="attributes_table liaison" id="attributes_table_liaison_3">

                    <table border="0" cellspacing="0" cellpadding="0" >
                        <h3>Enter the payment details below.</h3>
                        <tr>
                           <td><%= r.label "Select payment date" %></td>
                           <td><%= r.date_select(:payment_date, :default => Date.today) %></td>
                        </tr>
                        <tr>
                           <td><%= r.label "Select payment type" %></td>
                           <td><%= r.select(:payment_method, options_for_select(@screen_info[:payment_types])) %></td>
                        </tr>
                        <tr>
                           <td><%= r.label "Payment Notes" %></td>
                           <td><%= r.text_field :payment_notes %></td>
                        </tr>
                        <tr>
                           <td><%= r.label "Amount Received (please omit dollar sign)" %></td>
                           <td><%= r.number_field :payment_amount, :as => :number %></td>
                        </tr>
                        <input type = "hidden" name="payment[scheduled_group_id]" value= <%= @screen_info[:scheduled_group].id %> />
                    </table>
                    <div class="actions">
                        <%= r.submit "Submit" %>
                        <%= submit_tag 'Cancel', :name => 'cancel' %>
                    </div>
                 </div>
              </div>
           </div>
        <% end %>
     </div>
  </div>
</div>