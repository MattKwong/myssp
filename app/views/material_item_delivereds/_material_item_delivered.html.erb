<tr material_item_delivered_id="<%= material_item_delivered.id %>" >
  <td><%= material_item_delivered.item.name %></td>
  <td><%= material_item_delivered.quantity %></td>
  <td><%= material_item_delivered.delivery_date.strftime("%m/%d/%Y") %></td>
  <td><%= material_item_delivered.admin_user.name %></td>
  <td><%= number_to_currency(material_item_delivered.item.average_cost(material_item_delivered.project.program,
                                                                       Date.today), :unit => "$") %></td>
  <td><%= number_to_currency(material_item_delivered.item.average_cost(material_item_delivered.project.program,
                                                                         Date.today) * material_item_delivered.quantity, :unit => "$") %></td>
  <td><%= link_to "remove", material_item_delivered, :method=>:delete, #:remote => true,
                  :confirm => "Are you sure you want to remove #{material_item_delivered.item}?", :title => "Confirm Delete" %></td>
</tr>
